<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/RBTVActionBar</item>
        <item name="actionBarStyle">@style/RBTVActionBar</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- Action bar styles -->
    <style name="RBTVActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_background</item>

        <!-- Support library compatibility -->
        <item name="background">@color/action_bar_background</item>

        <item name="logo">@drawable/ic_logo</item>
        <item name="displayOptions">useLogo|showHome</item>

        <item name="android:titleTextStyle">@style/RBTVTitleTextStyle</item>
        <item name="titleTextStyle">@style/RBTVTitleTextStyle</item>
    </style>

    <!-- Title text styles -->
    <style name="RBTVTitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/action_bar_text</item>
    </style>

</resources>
