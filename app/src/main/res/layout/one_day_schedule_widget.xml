<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one_day_schedule_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/one_day_schedule_widget_header_background"
        android:text="@string/one_day_schedule_widget_header"
        android:textColor="@color/one_day_schedule_widget_header_text"
        android:textSize="@dimen/one_day_schedule_widget_header_text_size"
        android:padding="@dimen/one_day_schedule_widget_header_padding"/>
    <ListView
        android:id="@+id/one_day_schedule_widget_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/one_day_schedule_widget_list_background"/>
    <TextView
        android:id="@+id/one_day_schedule_widget_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/one_day_schedule_widget_item_background"
        android:textColor="@color/one_day_schedule_widget_item_text_color"
        android:textStyle="bold"
        android:text="@string/one_day_schedule_widget_empty_view_text"
        android:textSize="@dimen/one_day_schedule_widget_empty_view_text_size"/>
</LinearLayout>